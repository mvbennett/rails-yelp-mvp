<h1>
  <%= @restaurant.name %>
</h1>
<ul>
  <li>
    <%= @restaurant.address %>
  </li>
  <li>
    <%= @restaurant.category %>
  </li>
  <% unless (@restaurant.phone_number.nil?) %>
    <li>
      <%= @restaurant.phone_number %>
    </li>
  <% end %>
</ul>
<h2>
  Reviews
</h2>
<ul>
<% @restaurant.reviews.each do |review| %>
  <li>
    <%= review.rating %>/5
    <%= review.content %>
  </li>
<% end %>
</ul>
